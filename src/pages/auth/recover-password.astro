---
import Layout from "@/layouts/Layout.astro";
import { RecoverPasswordForm } from "@/components/auth/RecoverPasswordForm";
import { requireGuest } from "@/lib/auth-helpers";

export const prerender = false;

// Redirect to home if already authenticated
requireGuest(Astro);
---

<Layout title="Recover Password - 10xCards">
  <div class="container mx-auto py-16 max-w-md">
    <div class="space-y-6">
      <div class="space-y-2 text-center">
        <h1 class="text-3xl font-bold tracking-tight">Forgot your password?</h1>
        <p class="text-muted-foreground">
          Enter your email address and we'll send you instructions to reset your password
        </p>
      </div>

      <div class="rounded-lg border bg-card p-6 shadow-sm">
        <RecoverPasswordForm client:load />
      </div>
    </div>
  </div>
</Layout>
