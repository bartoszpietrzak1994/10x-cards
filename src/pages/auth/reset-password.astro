---
import Layout from "@/layouts/Layout.astro";
import { ResetPasswordForm } from "@/components/auth/ResetPasswordForm";
import { Alert, AlertDescription } from "@/components/ui/alert";

export const prerender = false;

// Extract token from URL parameters
const token = Astro.url.searchParams.get("token_hash") || "";

// Check if token exists
const hasToken = token.length > 0;
---

<Layout title="Reset Password - 10xCards">
  <div class="container mx-auto py-16 max-w-md">
    <div class="space-y-6">
      <div class="space-y-2 text-center">
        <h1 class="text-3xl font-bold tracking-tight">Reset your password</h1>
        <p class="text-muted-foreground">
          Enter your new password below
        </p>
      </div>

      <div class="rounded-lg border bg-card p-6 shadow-sm">
        {!hasToken ? (
          <Alert variant="destructive">
            <AlertDescription>
              Invalid or missing password reset link. Please request a new password reset email.
            </AlertDescription>
          </Alert>
          <div class="mt-4 text-center">
            <a href="/auth/recover-password" class="text-primary hover:underline">
              Request new password reset
            </a>
          </div>
        ) : (
          <ResetPasswordForm token={token} client:load />
        )}
      </div>
    </div>
  </div>
</Layout>
