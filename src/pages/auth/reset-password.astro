---
import Layout from "@/layouts/Layout.astro";
import { ResetPasswordForm } from "@/components/auth/ResetPasswordForm";
import { Alert, AlertDescription } from "@/components/ui/alert";

export const prerender = false;

// Extract token from URL query parameters
const url = new URL(Astro.request.url);
const token = url.searchParams.get("token_hash");

// Validate token presence
const hasValidToken = !!token;
---

<Layout title="Reset Password - 10xCards">
  <div class="container mx-auto py-16 max-w-md">
    <div class="space-y-6">
      <div class="space-y-2 text-center">
        <h1 class="text-3xl font-bold tracking-tight">Reset your password</h1>
        <p class="text-muted-foreground">
          Enter your new password below
        </p>
      </div>

      <div class="rounded-lg border bg-card p-6 shadow-sm">
        {hasValidToken ? (
          <ResetPasswordForm client:load token={token} />
        ) : (
          <Alert variant="destructive">
            <AlertDescription>
              The password reset link is invalid or has expired. Please{" "}
              <a href="/auth/recover-password" class="underline">
                request a new link
              </a>.
            </AlertDescription>
          </Alert>
        )}
      </div>
    </div>
  </div>
</Layout>

