export const prerender = false;

// Get authenticated user from middleware
const user = Astro.locals.user;

// Redirect to flashcards creation page if authenticated
// Otherwise redirect to login with redirect back to flashcards
if (user) {
  return Astro.redirect("/flashcards/create");
} else {
  return Astro.redirect("/auth/login?redirect=/flashcards/create");
}
